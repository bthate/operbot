#!/usr/bin/python3
# OPBOT - operbot (bin/opbot)
#
# this file is placed in the public domain

import atexit
import op
import os
import readline
import sys

# defines

wd = "/var/lib/opbot/"

# classes

class Console(op.hdl.Handler):

    "console class"

    def __init__(self):
        super().__init__()
        self.register("cmd", op.hdl.cmd)

    def announce(self, txt):
        "silence announcing"
        self.direct(txt)

    def direct(self, txt):
        print(txt)

    def input(self):
        "loop for input"
        while 1:
            try:
                e = self.poll()
            except EOFError:
                break
            self.put(e)
            e.wait()

    def poll(self):
        "wait for input"
        return op.hdl.Command(input("> "))

    def say(self, channel, txt):
        "strip channel from output"
        self.direct(txt)

    def start(self):
        "start console"
        super().start()
        op.thr.launch(self.input)

# functions

def main():
    cfg = op.prs.parse_cli(wd)
    if "d" in cfg.opts:
        h = op.hdl.Handler()
    else:
        h = Console()
    h.load("op.cmd")
    h.load("opbot.cmd")
    if cfg.txt:
        return h.cmd(cfg.otxt)
    h.init(cfg.sets.mods, "opbot")
    h.start()
    h.wait()

# runtime

cmds = []
op.trm.execute(main)
os._exit(0)
